# Shop Scan Pro Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# API Configuration
VITE_API_BASE_URL=https://api.shopscanpro.com
VITE_API_TIMEOUT=30000

# Authentication
VITE_JWT_SECRET=your-jwt-secret-key-here
VITE_SESSION_TIMEOUT=3600000

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
VITE_STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Analytics
VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_MIXPANEL_TOKEN=your_mixpanel_token_here
VITE_POSTHOG_KEY=your_posthog_key_here

# Push Notifications
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here

# External Services
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_HOTJAR_ID=your_hotjar_id_here

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=true
VITE_ENABLE_RATE_LIMITING=true

# Development Settings
VITE_DEBUG_MODE=false
VITE_MOCK_API=false
VITE_LOG_LEVEL=info

# AWS Configuration (if using AWS services)
VITE_AWS_REGION=us-west-2
VITE_AWS_COGNITO_USER_POOL_ID=us-west-2_XXXXXXXXX
VITE_AWS_COGNITO_CLIENT_ID=your_cognito_client_id

# Image Storage
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
VITE_S3_BUCKET_NAME=your-s3-bucket-name

# Rate Limiting
VITE_RATE_LIMIT_FREE_SCANS=10
VITE_RATE_LIMIT_PREMIUM_SCANS=100
VITE_RATE_LIMIT_API_REQUESTS=1000

# Security
VITE_CONTENT_SECURITY_POLICY=default-src 'self'
VITE_TRUSTED_DOMAINS=shopscanner.com,api.shopscanner.com

# Monitoring
VITE_ERROR_REPORTING=true
VITE_PERFORMANCE_MONITORING=true

# Social Media
VITE_TWITTER_HANDLE=@shopscanpro
VITE_FACEBOOK_PAGE=shopscanpro
VITE_LINKEDIN_COMPANY=shopscanpro

# Contact Information
VITE_SUPPORT_EMAIL=support@shopscanpro.com
VITE_LEGAL_EMAIL=legal@shopscanpro.com
VITE_PHONE_NUMBER=+1-555-123-4567

# App Information
VITE_APP_NAME=Shop Scan Pro
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Product Authenticity & Price Comparison
VITE_COMPANY_NAME=Shop Scan Pro LLC
VITE_COMPANY_ADDRESS=123 Tech Street, San Francisco, CA 94105