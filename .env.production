# Production Environment Configuration
# IMPORTANT: Update these values with your actual production credentials

# API Configuration
VITE_API_BASE_URL=https://api.shopscanner.com
VITE_API_TIMEOUT=30000

# Authentication
VITE_JWT_SECRET=your-production-jwt-secret-key-here
VITE_SESSION_TIMEOUT=3600000

# Stripe Configuration (LIVE KEYS)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key_here
VITE_STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here

# Analytics (Production IDs)
VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_MIXPANEL_TOKEN=your_production_mixpanel_token
VITE_POSTHOG_KEY=your_production_posthog_key

# Push Notifications
VITE_VAPID_PUBLIC_KEY=your_production_vapid_public_key

# External Services
VITE_SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
VITE_HOTJAR_ID=your_production_hotjar_id

# Feature Flags (Production)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=true
VITE_ENABLE_RATE_LIMITING=true

# Development Settings (Production)
VITE_DEBUG_MODE=false
VITE_MOCK_API=false
VITE_LOG_LEVEL=error

# AWS Configuration
VITE_AWS_REGION=us-west-2
VITE_AWS_COGNITO_USER_POOL_ID=us-west-2_XXXXXXXXX
VITE_AWS_COGNITO_CLIENT_ID=your_production_cognito_client_id

# Image Storage
VITE_CLOUDINARY_CLOUD_NAME=your_production_cloudinary_cloud_name
VITE_S3_BUCKET_NAME=shopscanner-production-assets

# Rate Limiting (Production)
VITE_RATE_LIMIT_FREE_SCANS=10
VITE_RATE_LIMIT_PREMIUM_SCANS=100
VITE_RATE_LIMIT_API_REQUESTS=1000

# Security
VITE_CONTENT_SECURITY_POLICY=default-src 'self'
VITE_TRUSTED_DOMAINS=shopscanner.com,api.shopscanner.com,cdn.shopscanner.com

# Monitoring
VITE_ERROR_REPORTING=true
VITE_PERFORMANCE_MONITORING=true

# Social Media
VITE_TWITTER_HANDLE=@shopscanner
VITE_FACEBOOK_PAGE=shopscanner
VITE_LINKEDIN_COMPANY=shopscanner

# Contact Information
VITE_SUPPORT_EMAIL=support@shopscanner.com
VITE_LEGAL_EMAIL=legal@shopscanner.com
VITE_PHONE_NUMBER=+1-555-123-4567

# App Information
VITE_APP_NAME=Shop Scanner
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Product Authenticity & Price Comparison
VITE_COMPANY_NAME=Shop Scanner LLC
